{
  "name": "e2e",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "pretest": "yarn workspace scroll-wizard build",
    "test": "yarn pretest && yarn playwright test",
    "test:ui": "yarn playwright test --ui",
    "http:server:start": "yarn http-server ./ -c-1 -p 8001",
    "test:with-server": "concurrently \"yarn http:server:start\" \"yarn test:ui\""
  },
  "dependencies": {
    "scroll-wizard": "workspace:^"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/node": "^20.14.9",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  }
}
