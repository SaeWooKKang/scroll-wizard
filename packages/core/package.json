{
  "name": "scroll-wizard",
  "version": "0.0.3",
  "description": "Enchant your web scrolling with ease!",
  "keywords": [
    "scroll",
    "web",
    "scrollbar"
  ],
  "type": "module",
  "homepage": "https://github.com/SaeWooKKang/scroll-wizard",
  "repository": {
    "type": "git",
    "url": "https://github.com/SaeWooKKang/scroll-wizard.git"
  },
  "bugs": "https://github.com/SaeWooKKang/scroll-wizard/issues",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn tsc",
    "ci": "yarn clean & yarn build",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "dev": "yarn vitest"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@vitest/browser": "^2.0.3",
    "@vitest/coverage-istanbul": "^2.0.3",
    "playwright": "^1.45.1",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  }
}
