{
  "compilerOptions": {
    /** host */
    "module": "ESNext",
    "moduleResolution": "Bundler", /** for vitest*/
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /** input */
    "rootDir": "src",
    "strict": true,                                      
    "skipLibCheck": true,  
    "typeRoots": ["./node_modules/@types"],
    "composite": true,

    /** output */
    "target": "ES2022",
    "outDir": "dist",
    "declaration": true,
  },
  "include": ["src/**/*"], 
  "exclude": ["src/**/*.test.*"]
}
